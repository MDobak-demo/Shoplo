{% if app.user %}
    <div class="navbar-right">
        <p class="navbar-text">
            Witaj <b>{{ app.user.email }}</b>
            <a href="{{ path("app_admin_home") }}" type="submit">Admin dashboard</a>
            <a href="{{ path("app_logout") }}" type="submit">Logout</a>
        </p>
    </div>
{% else %}
    <form action="{{ path("app_login") }}" method="post" class="navbar-form navbar-right">
        <div class="form-group">
            <input type="text" name="_username" placeholder="Email" class="form-control">
        </div>
        <div class="form-group">
            <input type="password" name="_password" placeholder="Password" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Sign in</button>
        <a href="{{ path("app_register") }}" type="submit" class="btn btn-info">Register</a>
    </form>
{% endif %}